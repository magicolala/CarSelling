{% extends 'base.html.twig' %}

{% block style %}
    <style>
        .info {
            font-weight: 600;
        }
    </style>
{% endblock %}

{% block body %}
    {% include 'front/includes/navbar.html.twig' %}
    <div class="container-fluid p-5">
        <div class="row">
            <div class="col-md-4">
                <h3>{{ car.brand }} {{ car.model }}</h3>
                <table class="table table-bordered">
                    <thead>
                    <tr>
                        <th class="info">Année</th>
                        <td>{{ car.year }}</td>
                    </tr>
                    <tr>
                        <th class="info">Marque</th>
                        <td>{{ car.brand }}</td>
                    </tr>
                    <tr>
                        <th class="info">Modèle</th>
                        <td>{{ car.model }}</td>
                    </tr>
                    <tr>
                        <th class="info">Kilometrage</th>
                        <td>{{ car.kilometrage }} km</td>
                    </tr>

                    <tr>
                        <th class="info">Carburant</th>
                        <td>{{ car.energie|capitalize }}</td>
                    </tr>
                    <tr>
                        <th class="info">Ville</th>
                        <td>{{ car.city }}</td>
                    </tr>
                    <tr>
                        <th class="info">Nombre de porte</th>
                        <td>{{ car.nbPorte }}</td>
                    </tr>
                    <tr>
                        <th valign="top" class="info">Catégorie</th>
                        <td>{{ categories[car.category] }}</td>
                    </tr>
                    <tr>
                        <th class="info">Boite de vitesse</th>
                        <td>{{car.boiteDeVitesse}}</td>
                    </tr>
                    <tr>
                        <th class="info">Publié le </th>
                        <td>{{car.createdAt|date('d/m/Y')}}</td>
                    </tr>
                    </thead>

                </table>
                <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m12!1m3!1d10558.73061674311!2d1.60369505!3d48.577626599999995!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sfr!2sfr!4v1581949741023!5m2!1sfr!2sfr" width="100%" height="350" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
            </div>
            <div class="col-md-8">
                <div class="card">

                    <!--Card image-->
                    <img class="card-img-top" src="{{car.img}}" alt="Card image cap">

                    <!--Card content-->
                    <div class="card-body">

                        <!-- Container -->
                        <div class="d-block d-flex justify-content-center">

                            <!-- Column -->
                            <div class="p-3 col-md-6">

                                <h3 class="pb-3 font-weight-bold d-flex justify-content-between"><span>{{ car.brand }} {{ car.model }}</span><span><i class="fas fa-star text-warning"></i>{{ car.note|number_format(1,',', ' ') }}</span></h3>
                                <p align="justify">{{ car.description }}</p>

                            </div>
                            <!-- Column -->

                        </div>
                        <!-- Container -->
                        {% if car.isSelling != true %}
                        <div class="text-center">
                            <a href="{{ path('sellCar', {'id': car.id}) }}" class="btn btn-danger">Acheter {{ car.prix }} €</a>
                        </div>
                        {% else %}
                            <div class="text-center">
                                <button class="btn btn-danger disabled">Vendu {{ car.prix }} €</button>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
{% endblock %}

